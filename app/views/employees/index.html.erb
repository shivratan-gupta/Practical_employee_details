<p id="notice"><%= notice %></p>

<h4>Employees</h4>

<div style="float:right">
  <%= form_tag employees_url, {method: :get, class: "navbar-form", role: "search"} do %>
   <div class="input-group">
      <%= text_field_tag :query, nil, {class: "input form-control", placeholder: "Search", id:"srch-term"} %>
      <div class="">
        <button class="btn btn-defaul" type="submit" style="padding: 0px !important"><i class="btn btn-info">Go</i></button>
      </div>
    </div>
  <% end %>  
</div> 

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Enable</th>
      <th>User Name</th>
      <th>First Name</th>
      <th>Last NAme</th>
      <th>Permission</th>
      <th>Skills</th>
      <th>chat Limit</th>
      <th>Email Limit</th>
      <th>IP</th>
      <th colspan="2">Action</th>

    </tr>
  </thead>

  <tbody>
    <% @employees.each_with_index do |employee,index| %>
      <tr>

        <td><%=index + 1%></td>
        <td><i class="glyphicon glyphicon glyphicon-ok"></i></td>
        <td><%=employee.user_email %></td>
        <td><%=employee.first_name %></td>
        <td><%=employee.virtual_first_name %></td>
        <td></td>
        <td></td>
        <td><%=employee.chat_limit %></td>
        <td><%=employee.email_limit %></td>
        <td><%=employee.ip_address %></td>
        <!-- <td><%#= link_to 'Edit', edit_employee_path(employee) %></td> -->
        <td><%= link_to '<i class="glyphicon glyphicon glyphicon-pencil"></i>'.html_safe, edit_employee_path(employee) %></td>
        <td><%= link_to '<i class="glyphicon glyphicon glyphicon-trash"></i>'.html_safe, employee, method: :delete, id: employee.id, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @employees, theme: 'my_custom_theme' %>


<br>

<%= link_to 'New Employee', new_employee_path, class: "button is-link btn btn-info" %>
